# NovaSystem Environment Configuration
# Copy this file to .env and fill in your values

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OLLAMA_HOST=http://localhost:11434
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Process Configuration
MAX_ITERATIONS=5
DEFAULT_DOMAINS=General,Technology,Business

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Web Interface Configuration
WEB_HOST=0.0.0.0
WEB_PORT=5000

# Gradio Configuration
GRADIO_HOST=0.0.0.0
GRADIO_PORT=7860

# Memory Configuration
MAX_SHORT_TERM_MEMORY=10
MAX_LONG_TERM_MEMORY=100

# Session Management Configuration
NOVASYSTEM_SESSION_DIR=sessions
NOVASYSTEM_AUTO_SAVE=true
NOVASYSTEM_DATA_DIR=data
NOVASYSTEM_LOGS_DIR=logs
NOVASYSTEM_LOG_LEVEL=INFO

# LLM Configuration (Advanced)
NOVASYSTEM_TEMPERATURE=0.7
NOVASYSTEM_MAX_TOKENS=1000
