# NovaSystem-Streamlined Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM API Keys
# =============================================================================
# At least one API key is required for LLM functionality

# OpenAI API Key (for GPT models)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama Host (for local models)
# Default: http://localhost:11434
OLLAMA_HOST=http://localhost:11434

# =============================================================================
# Model Configuration
# =============================================================================
# Default model to use (options: claude-3-5-haiku-20241022, gpt-4, ollama:phi3, etc.)
NOVASYSTEM_MODEL=claude-3-5-haiku-20241022
DEFAULT_MODEL=claude-3-5-haiku-20241022

# LLM Parameters
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1000

# =============================================================================
# API Server Configuration
# =============================================================================
# FastAPI REST API settings
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Web UI Configuration
# =============================================================================
# Flask Web UI settings
WEB_HOST=0.0.0.0
WEB_PORT=5000

# Gradio UI settings
GRADIO_HOST=0.0.0.0
GRADIO_PORT=7860

# =============================================================================
# Session Management
# =============================================================================
# Directory to store session files
SESSION_DIR=sessions

# Auto-save sessions (true/false)
AUTO_SAVE_SESSIONS=true

# Session retention in days (0 = keep forever)
SESSION_RETENTION_DAYS=0

# =============================================================================
# System Configuration
# =============================================================================
# Project root directory (leave blank to auto-detect)
# PROJECT_ROOT=/path/to/NovaSystem-Streamlined

# Data directory
# DATA_DIR=data

# Logs directory
# LOGS_DIR=logs

# =============================================================================
# Development Settings
# =============================================================================
# Enable debug mode (not recommended for production)
# DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO
